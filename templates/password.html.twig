{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid py-3">
        {% include 'adsense-row.html.twig' %}
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="h3 pb-3">Dieses Bild wurde durch ein Kennwort zusätzlich geschützt!</h1>
            </div>
            <div class="col-12 text-center">
                {% if error is defined %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% else %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="text-end">
                        <button type="submit" class="btn btn-outline-primary">Bild ansehen</button>
                    </div>
                    {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}